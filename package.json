{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/alexlafroscia/ember-runtime-config.git"
  },
  "license": "MIT",
  "author": "Alex LaFroscia",
  "scripts": {
    "build": "pnpm --filter=ember-runtime-config run build",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "prepare": "pnpm run build",
    "release": "release-it",
    "start": "concurrently 'pnpm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter=ember-runtime-config run start",
    "start:test-app": "pnpm --filter=test-app run start",
    "test": "pnpm --filter=test-app run test",
    "test:ember": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@glint/core": "^1.2.1",
    "@release-it-plugins/lerna-changelog": "^7.0.0",
    "@release-it-plugins/workspaces": "^4.2.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.5",
    "prettier-plugin-ember-template-tag": "^2.0.2",
    "release-it": "^17.6.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "packageManager": "pnpm@9.7.0",
  "pnpm": {
    "packageExtensions": {
      "ember-cli-fastboot-testing": {
        "peerDependencies": {
          "@ember/test-helpers": "^2.0.0 || ^3.2.0"
        },
        "peerDependenciesMeta": {
          "@ember/test-helpers": {
            "optional": true
          }
        }
      }
    },
    "peerDependencyRules": {
      "allowAny": [
        "ember-runtime-config",
        "ember-source",
        "typescript"
      ],
      "ignoreMissing": [
        "webpack"
      ]
    }
  },
  "release-it": {
    "hooks": {
      "after:bump": "pnpm install",
      "before:init": "cp README.md LICENSE.md packages/ember-runtime-config/"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "ember-runtime-config"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-app/package.json"
          ],
          "versionUpdates": [
            "package.json",
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "20.16.0",
    "pnpm": "9.7.0"
  },
  "version": "2.0.0"
}
